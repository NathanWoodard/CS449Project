<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/calorie"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:text="Calorie"
        android:onClick="btnCal"
        app:layout_constraintBottom_toTopOf="@+id/workout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/workout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/calorie"
        android:layout_marginTop="1dp"
        android:text="Workout"
        app:layout_constraintBottom_toTopOf="@+id/sleep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calorie" />

    <Button
        android:id="@+id/sleep"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/workout"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="8dp"
        android:text="Sleep"
        app:layout_constraintBottom_toTopOf="@+id/weight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workout" />

    <Button
        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/sleep"
        android:text="Weight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleep" />

</androidx.constraintlayout.widget.ConstraintLayout>